<Window x:Class="Notepad.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad"
        mc:Ignorable="d"
        Height="450" Width="450" Background="Black" WindowStyle="None">
    <Grid>
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="100" Width="100">
            <Label.Background>
                <ImageBrush ImageSource="/chameleon.ico"/>
            </Label.Background>
        </Label>
        <Label x:Name="label1" Content="Notepad-- v.0.1" HorizontalAlignment="Left" Margin="117,49,0,355" Width="148" Foreground="White" FontWeight="Bold" />
        <Label x:Name="label2" Content="Build time : April 19.2023 - 19:40:27" HorizontalAlignment="Left" Margin="230,13,0,0" VerticalAlignment="Top" Height="31" Width="205" Foreground="White"/>
        <Label x:Name="label3" Content="Home:" HorizontalAlignment="Left" Margin="12,139,0,0" VerticalAlignment="Top" Width="53" Foreground="White"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="65,128,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="209">
            <TextBlock FontWeight="Bold" Width="203">
            <Hyperlink NavigateUri="https://notepad-minus-minus.ru/">
                https://notepad-minus-minus.ru/
            </Hyperlink>
            </TextBlock>
        </TextBlock>
        <GroupBox Header="GNU General Public Licence" Margin="45,164,45,65" Foreground="White">
